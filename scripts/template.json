 
{
  "variables": {
    "ansible_host": "default",
    "ansible_connection": "docker"
  },
  "builders": [{
    "type": "docker",
    "image": "ubuntu:xenial",
    "export_path": "immutable.tar",
    "changes": [
        "EXPOSE 5000 5000",
        "WORKDIR /root",
        "CMD python3 /root/website.py;"
    ],
    "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "container01",
        "{{.Image}}",
        "/bin/bash"
    ]
  }],
 "provisioners": [
    {
      "type": "shell",
      "inline": [ "apt-get update && apt-get --yes install python3-pip python3-dev && pip3 install flask",
                  "apt-get --yes install rsync"
                ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./copy_into.yaml",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host=container01 ansible_connection=docker ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ],
  "post-processors": [
    [


    ]
  ]
}
